{
  "name": "chunkArray",
  "version": "0.0.0-semantically-released",
  "description": "Chunk array in arrays of N depth ",
  "main": "dist/index.js",
  "release": {
    "verifyConditions": "condition-circle"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "commit": "git-cz",
    "check-coverage": "nyc check-coverage --statements 100 --branches 100 --functions 100 --lines 100",
    "cover": "nyc --reporter=lcov npm t",
    "lint": "eslint ./src",
    "test": "mocha src/index.test.js --compilers js:babel-register --require babel-polyfill",
    "pkgfiles": "pkgfiles",
    "size": "tarball=\"$(npm pack .)\"; wc -c \"${tarball}\"; tar tvf \"${tarball}\"; rm \"${tarball}\";",
    "prebuild": "rm -rf dist",
    "build": "npm-run-all --parallel build:*",
    "build:umd": "webpack --env.dev --output-filename index.js",
    "build:umd.min": "webpack --env.prod --output-filename index.min.js",
    "validate": "npm run cover && npm run check-coverage",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mBourges/chunk-array.git"
  },
  "keywords": [
    "array",
    "chunk",
    "ES6",
    "reduce"
  ],
  "author": "Matthieu Bourges",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mBourges/chunk-array/issues"
  },
  "homepage": "https://github.com/mBourges/chunk-array",
  "devDependencies": {
    "babel-cli": "6.18.0",
    "babel-core": "6.18.2",
    "babel-eslint": "7.1.1",
    "babel-loader": "6.2.7",
    "babel-polyfill": "6.16.0",
    "babel-preset-es2015-webpack": "6.4.3",
    "babel-preset-stage-2": "6.18.0",
    "babel-register": "6.18.0",
    "chai": "3.5.0",
    "commitizen": "2.8.6",
    "condition-circle": "1.5.0",
    "cz-conventional-changelog": "1.2.0",
    "eslint": "3.10.2",
    "eslint-config-airbnb": "13.0.0",
    "eslint-import-resolver-webpack": "0.7.0",
    "eslint-plugin-import": "2.2.0",
    "eslint-plugin-jsx-a11y": "3.0.1",
    "ghooks": "1.3.2",
    "mocha": "3.1.2",
    "npm-run-all": "3.1.1",
    "nyc": "9.0.1",
    "path": "0.12.7",
    "pkgfiles": "2.3.0",
    "semantic-release": "^6.3.2",
    "webpack": "^2.1.0-beta.6"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run validate && npm run size && npm run pkgfiles"
    },
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  }
}
